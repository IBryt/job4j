<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping">
    <class name="ru.job4j.models.Item" table="td_items">
        <id name="id" column="td_id">
            <generator class="identity"/>
        </id>
        <property name="desc" column="td_desc"/>
        <property name="created" column="td_create_date"/>
        <property name="done" column="td_done"/>
    </class>
</hibernate-mapping>