<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
        http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
                 version="1.0">

    <mapped-superclass class="ru.job4j.models.Model">
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY" />
            </id>
            <version name="version"></version>
        </attributes>
    </mapped-superclass>

    <entity class="ru.job4j.models.impl.cars.Car">
        <attributes>
            <basic name="name"/>
            <basic name="saleStatus"/>
            <many-to-one name="brand" fetch="EAGER">
                <cascade>
                    <cascade-persist/>
                    <cascade-merge/>
                </cascade>
            </many-to-one>
            <many-to-one name="carcase" fetch="EAGER">
                <cascade>
                    <cascade-persist/>
                    <cascade-merge/>
                </cascade>
            </many-to-one>
            <many-to-one name="category" fetch="EAGER">
                <cascade>
                    <cascade-persist/>
                    <cascade-merge/>
                </cascade>
            </many-to-one>
            <many-to-many name="authors" fetch="EAGER">
                <cascade>
                    <cascade-persist/>
                    <cascade-merge/>
                </cascade>
                <join-table name="av_car_authors">
                    <join-column name="car_id"/>
                    <inverse-join-column name="authors_id"/>
                </join-table>
            </many-to-many>
        </attributes>
    </entity>

    <entity class="ru.job4j.models.impl.cars.Brand">
        <attributes>
            <basic name="name"/>
            <one-to-many name="cars" fetch="EAGER" mapped-by="brand"/>
        </attributes>
    </entity>

    <entity class="ru.job4j.models.impl.cars.Carcase">
        <attributes>
            <basic name="name"/>
            <one-to-many name="cars" fetch="EAGER" mapped-by="carcase"/>
        </attributes>
    </entity>

    <entity class="ru.job4j.models.impl.cars.Category">
        <attributes>
            <basic name="name"/>
            <one-to-many name="cars" fetch="EAGER" mapped-by="category"/>
        </attributes>
    </entity>
    <entity class="ru.job4j.models.impl.users.Users">
        <attributes>
            <basic name="login"/>
            <basic name="password"/>
            <many-to-many name="cars" fetch="EAGER" mapped-by="authors">
                <!--<join-table name="av_car_authors">-->
                    <!--<join-column name="authors_id"/>-->
                    <!--<inverse-join-column name="car_id"/>-->
                <!--</join-table>-->
            </many-to-many>
        </attributes>
    </entity>
</entity-mappings>